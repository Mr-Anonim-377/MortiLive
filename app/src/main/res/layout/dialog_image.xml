<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
                                   android:layout_height="380dp"
                                   app:cardBackgroundColor="@android:color/white"
                                   app:cardCornerRadius="@dimen/spacing_middle"
                                   app:cardElevation="3dp"
                                   app:cardUseCompatPadding="true">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:layout_width="210dp"
                android:layout_height="42dp"
                app:cardBackgroundColor="#B3E9538D"
                android:id="@+id/СardView_3"
                app:cardPreventCornerOverlap="false"
                android:layout_alignRight="@+id/dialogImage" android:layout_marginRight="9dp"
                android:layout_marginEnd="9dp" android:layout_alignEnd="@+id/dialogImage"
                android:layout_marginLeft="180dp"
                android:layout_alignLeft="@+id/dialogImage" android:layout_alignStart="@+id/dialogImage"
                android:layout_alignTop="@+id/dialogImage" android:layout_marginTop="314dp"
                android:layout_marginStart="180dp"
                android:layout_marginBottom="9dp" android:layout_alignBottom="@+id/dialogImage">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:text="Скачать"
                    android:textColor="@color/grey_90" android:layout_alignTop="@+id/СardView_3"
                    android:layout_above="@+id/СardView_3" android:layout_alignStart="@+id/СardView_3"
                    android:layout_alignLeft="@+id/СardView_3"/>

        </androidx.cardview.widget.CardView>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/dialogImage"/>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_large"
                app:cardBackgroundColor="@color/overlay_dark_20"
                app:cardCornerRadius="@dimen/spacing_medium"
                app:cardElevation="0dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                <View
                        android:layout_width="@dimen/spacing_middle"
                        android:layout_height="0dp"/>

                <ImageView
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="@dimen/spacing_large"
                        android:tint="@android:color/white"
                />

                <View
                        android:layout_width="@dimen/spacing_middle"
                        android:layout_height="0dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/spacing_xlarge"
                        android:gravity="center"
                        android:text="Постер"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/grey_5"/>

                <View
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="0dp"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>





