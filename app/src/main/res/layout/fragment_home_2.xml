<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  android:layout_height="match_parent"
              android:layout_width="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView

            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" android:background="#00ACC1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linearLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_gravity="end">

                <ImageView
                        android:layout_width="342dp"
                        android:layout_height="112dp" tools:srcCompat="@drawable/logo"
                        android:id="@+id/imageView5"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UnknownId" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="visible" tools:visibility="visible" app:srcCompat="@drawable/logo"
                        app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
                <ImageButton
                        android:layout_width="54dp"
                        android:layout_height="61dp" app:srcCompat="@drawable/ic_1563552926"
                        android:id="@+id/imageButton4"
                        tools:ignore="MissingConstraints,NotSibling,VectorDrawableCompat"
                        android:background="#00FFFFFF"

                        android:layout_margin="16dp"
                        tools:layout_editor_absoluteX="14dp" tools:layout_editor_absoluteY="0dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="214dp" android:id="@+id/viewPage"
                    android:background="#E53935"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="15dp" app:layout_constraintTop_toTopOf="parent">
            </androidx.viewpager.widget.ViewPager>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="281dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/imageView4"
                    android:layout_marginTop="10dp" android:background="#8E24AA"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="281dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="10dp" android:background="#8E24AA"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="281dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/imageView3"
                    android:layout_marginTop="10dp" android:background="#8E24AA"/>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</FrameLayout>
